# =============================================================================
# CELO MEXICO ACADEMY - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# =============================================================================
# AUTHENTICATION (CRITICAL - Required for app to function)
# =============================================================================
# Get these from https://dashboard.privy.io
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id_here
PRIVY_APP_SECRET=your_privy_app_secret_here

# Admin Access Control (comma-separated)
# Wallet addresses that should have admin access
ADMIN_WALLETS=0x1234567890123456789012345678901234567890,0xabcdefabcdefabcdefabcdefabcdefabcdefabcd
NEXT_PUBLIC_ADMIN_WALLETS=0x1234567890123456789012345678901234567890,0xabcdefabcdefabcdefabcdefabcdefabcdefabcd

# Email addresses that should have admin access (optional)
ADMIN_EMAILS=admin@example.com,another-admin@example.com

# WalletConnect Project ID (optional, for WalletConnect support)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# NextAuth Configuration
NEXTAUTH_SECRET=your-super-secret-key-here-32-chars-minimum
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# DATABASE (CRITICAL - Required for app to function)
# =============================================================================
# Production database URL (PostgreSQL recommended)
DATABASE_URL="postgresql://username:password@host:port/database"

# Direct connection URL (for connection pooling)
DIRECT_URL="postgresql://username:password@host:port/database"

# Test database URL (separate database for testing)
DATABASE_URL_TEST="postgresql://username:password@host:port/database_test"

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Error tracking with Sentry
SENTRY_DSN=your_sentry_dsn_here

# Structured logging with Axiom
AXIOM_TOKEN=your_axiom_token_here
AXIOM_DATASET=celo-mx-logs

# Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features during development
FEATURE_NEW_COURSE_UI=false
FEATURE_EXPERIMENTAL_API=false
FEATURE_ADMIN_PANEL=true

# =============================================================================
# SECURITY CONFIGURATION  
# =============================================================================
# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS origins (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,https://celo-mx.vercel.app

# =============================================================================
# DEVELOPMENT/PRODUCTION FLAGS
# =============================================================================
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Debug logging
DEBUG_ENABLED=true
LOG_LEVEL=debug

# =============================================================================
# CELO BLOCKCHAIN DEPLOYMENT
# =============================================================================
# Private key for deploying contracts (keep secure!)
PRIVATE_KEY=your_private_key_here_64_chars

# Celo network RPC URLs
CELO_RPC_URL=https://forno.celo.org
ALFAJORES_RPC_URL=https://alfajores-forno.celo-testnet.org

# Block explorer API keys for contract verification
CELOSCAN_API_KEY=your_celoscan_api_key_here
ALFAJORES_CELOSCAN_API_KEY=your_alfajores_celoscan_api_key_here

# Gas price settings (in wei)
CELO_GAS_PRICE=500000000
ALFAJORES_GAS_PRICE=500000000

# Deployment confirmation blocks
CONFIRMATION_BLOCKS=5

# =============================================================================
# BACKUP AND MONITORING
# =============================================================================
# Health check endpoints secret
HEALTH_CHECK_SECRET=your_health_check_secret

# Backup configuration
BACKUP_ENABLED=false
BACKUP_FREQUENCY_HOURS=24

# =============================================================================
# NOTES FOR PRODUCTION
# =============================================================================
# 1. Generate NEXTAUTH_SECRET with: openssl rand -base64 32
# 2. Use strong passwords for database connections
# 3. Enable BACKUP_ENABLED=true in production
# 4. Set DEBUG_ENABLED=false in production
# 5. Use environment-specific DATABASE_URL values
# 6. Configure SENTRY_DSN for error tracking
# 7. Set proper CORS origins for your domain
# 8. NEVER commit your PRIVATE_KEY - use secure key management
# 9. Get Celoscan API keys from https://celoscan.io/apis
# 10. Test deployments on Alfajores before mainnet
# 11. Use hardware wallets for production deployments
# 12. Keep deployment addresses backed up securely
